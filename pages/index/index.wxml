<!--index.wxml-->
<view class="container">
  <view>
    <!-- <van-nav-bar style="margin:0;" title="标题" left-text="返回" right-text="按钮" left-arrow bind:click-left="onClickLeft" bind:click-right="onClickRight" /> -->

  </view>
  <van-tabs sticky active="{{ active }}" bind:change="onChange">
    <van-tab title="标签 1">
     <block wx:for="{{listData}}" wx:key="itemid">
      <van-card 
        num="2"
        price="{{item.itemendprice}}"
        desc="{{item.itemdesc}}"
        title="{{item.itemtitle}}"
        thumb="{{ item.taobao_image}}"
      >
      </van-card>
     </block>
   
    </van-tab>
    <van-tab title="标签 2">
      <block wx:for="{{listDatas}}" wx:key="skuid">
      <van-card 
        num="2"
        price="{{item.itemendprice}}"
        title="{{item.goodsname}}"
        thumb="{{item.itempic}}" 
      >
      </van-card>
     </block>
    </van-tab>
    <van-tab title="标签 3">内容 3</van-tab>
    <van-tab title="标签 4">内容 4</van-tab>
  </van-tabs>
  <van-tabbar active="{{ active }}" bind:change="onChange">
  <van-tabbar-item icon="home-o">
  <navigator url="/pages/home/home">地点</navigator>
  </van-tabbar-item>
  <van-tabbar-item icon="search">标签</van-tabbar-item>
  <van-tabbar-item icon="friends-o">标签</van-tabbar-item>
  <van-tabbar-item icon="setting-o">标签</van-tabbar-item>
</van-tabbar>

</view>